{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gj7-client",
  "version": "0.1.0",
  "identifier": "com.gj7-client.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "/",
        "visible": false,
        "fullscreen": true,
        "decorations": true,
        "alwaysOnTop": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "width": 600,
        "height": 600,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
